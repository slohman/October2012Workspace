<?xml version="1.0" encoding="utf-8"?>
<ScrollView

xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/labelairline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Airline :"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/jumpseatairline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".2"
            android:background="@color/black"
            android:gravity="left"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ljumpseatwebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:text="WebSite:"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/jmpwebsite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight=".2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="@dimen/size10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ljumpseatcontact_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tel    #"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/contact_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.20"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ljumpseatcontact2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:text="Tel    #"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/contact_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/llist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="List  ?"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/listreq"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1=yes, 0=no"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lchkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chk In ?"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/chkin"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="0.27"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textColorHint="@color/black"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:text="Min Prior"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/ldress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dress  :"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/dress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lintl"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Intl"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/intl"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1=yes, 0=no (Taxes &amp; Fees !)"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp" >

        <TextView
            android:id="@+id/lnumjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="# of J/S"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/numjs"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/blue"
            android:textSize="@dimen/size08" />

        <TextView
            android:id="@+id/lkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C=Cap, M=Multiple, or #"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/jumpseatcomments"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/size08" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/llegend"
            android:layout_width="wrap_content"
            android:layout_height="134dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="BC = Bus Casual \n U = Uniform \n C = Casual \n N=Neat Clean \n No Jeans OFFline" >

            <requestFocus />
        </EditText>

    </LinearLayout>

</LinearLayout>

</ScrollView>


