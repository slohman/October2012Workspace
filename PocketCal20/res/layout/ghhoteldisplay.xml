<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
 android:layout_width="fill_parent"
    android:layout_height="wrap_content">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
<TextView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cityid"
    android:textSize="@dimen/size16"
    android:background="@color/white"
    android:textColor = "@color/black"
    android:padding="5dp"/>
    
    <TextView 
    
    android:id="@+id/city"
    android:layout_width="fill_parent"
        android:layout_below="@+id/cityid"
      android:layout_alignParentLeft="true"
    android:layout_height="wrap_content"
     android:textSize="@dimen/size14"
     android:background="@color/white"
    android:textColor = "@color/black"
    android:padding="5px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lrampTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5px"
            android:text="Ramp #:"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <Button
            android:id="@+id/ramptel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/selectable"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/lrampTel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5px"
            android:text="Ramp #1:"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <Button
            android:id="@+id/ramptel1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/selectable"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/lrampTel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5px"
            android:text="Ramp #2:"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <Button
            android:id="@+id/ramptel2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/selectable"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lrampEMAIL"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/black"
            android:gravity="left"
            android:padding="5px"
            android:text="Ramp Email"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <TextView
            android:id="@+id/rampemail"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lhotelname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:text="Hotel Name"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <TextView
            android:id="@+id/hotelname"
            android:layout_width="fill_parent"
            android:layout_height="82dp"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lhotelnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:text="Hotel #"
            android:textColor="@color/white"
            android:textSize="@dimen/size14" />

        <Button
            android:id="@+id/hotelnum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/selectable"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tlGTInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" GT Info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/size14" />

        <Button
            android:id="@+id/gtinfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alpabtn"
            android:gravity="left"
            android:padding="5px"
            android:textColor="@color/selectable"
            android:textSize="@dimen/size14" />

    </LinearLayout>

    <TextView
        android:id="@+id/lNotes"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:background="@drawable/alpabtn"
        android:gravity="left"
        android:padding="5px"
        android:text="Notes"
        android:textColor="@color/white"
        android:textSize="@dimen/size14" />

    <TextView
        android:id="@+id/notes"
        android:layout_width="fill_parent"
        android:layout_height="111dp"
        android:background="@drawable/alpabtn"
        android:gravity="left"
        android:padding="5px"
        android:textColor="@color/white"
        android:textSize="@dimen/size14" />

</LinearLayout>
</ScrollView>