<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.53" >

        <TextView
            android:id="@+id/tvOTPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="69dp"
            android:gravity="right"
            android:text="  "
            android:textSize="@dimen/size12" />

        <TextView
            android:id="@+id/tvOTEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvOTPosition"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="  "
            android:textSize="@dimen/size12" />

        <TextView
            android:id="@+id/tvOTBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="  "
            android:textSize="@dimen/size12" />

        <TextView
            android:id="@+id/kcmdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvOTPosition"
            android:layout_marginRight="46dp"
            android:layout_toLeftOf="@+id/tvOTPosition"
            android:text="Opentime"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>