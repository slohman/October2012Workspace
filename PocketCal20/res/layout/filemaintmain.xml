<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <Button
        android:id="@+id/installMainDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/installMainDB"
        android:textColor="@color/white"
        android:typeface="normal" />

    <Button
        android:id="@+id/installuserDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/installUserDB"
        android:textColor="@color/white" />
   
    <Button
        android:id="@+id/SaveuserDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5pt"
        android:text="@string/saveUserDB" />

    <Button
        android:id="@+id/restoreUserDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/restoreUserDB" />

    <Button
        android:id="@+id/emailUserDB"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/emailUserDB"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/loadEGRID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/loadEGRID"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/setUserNamePwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/setUserNamePwd"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnVer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:shadowColor="#ffffff"
        android:text="@string/checkVer"
        android:textColor="@color/white" />
   
    <Button
        android:id="@+id/btnocr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="Load OCR file"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/cleanfiles"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clean Dowloaded FIles" />

</LinearLayout>

</ScrollView>